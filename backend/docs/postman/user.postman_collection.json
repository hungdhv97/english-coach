            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"display_name\": \"John Doe Updated\",\n  \"avatar_url\": \"https://example.com/avatar.jpg\",\n  \"birth_day\": \"1990-01-01\",\n  \"bio\": \"Software developer passionate about learning languages\"\n}",
