{
  "info": {
    "name": "English Coach - Game API",
    "description": "Collection for vocabulary game session management and statistics endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "game-collection",
    "version": {
      "major": 1,
      "minor": 0,
      "patch": 0
    }
  },
  "item": [
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Game Session - Topic Mode",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mode\": \"topic\",\n  \"sourceLanguageId\": 1,\n  \"targetLanguageId\": 2,\n  \"topicId\": 1,\n  \"totalQuestions\": 10\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/games/sessions",
              "host": ["{{base_url}}"],
              "path": ["games", "sessions"]
            },
            "description": "Create a new vocabulary game session with topic mode"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.environment.set('session_id', jsonData.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Create Game Session - Level Mode",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"mode\": \"level\",\n  \"sourceLanguageId\": 1,\n  \"targetLanguageId\": 2,\n  \"levelId\": 1,\n  \"totalQuestions\": 10\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/games/sessions",
              "host": ["{{base_url}}"],
              "path": ["games", "sessions"]
            },
            "description": "Create a game session with level mode"
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    if (jsonData.data && jsonData.data.id) {",
                  "        pm.environment.set('session_id', jsonData.data.id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Game Session",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/games/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["games", "sessions", "{{session_id}}"]
            },
            "description": "Get game session details with questions"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Answers",
      "item": [
        {
          "name": "Submit Answer",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"questionId\": 1,\n  \"selectedOptionId\": 2,\n  \"responseTimeMs\": 5000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/games/sessions/{{session_id}}/answers",
              "host": ["{{base_url}}"],
              "path": ["games", "sessions", "{{session_id}}", "answers"]
            },
            "description": "Submit an answer to a game question"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Statistics",
      "item": [
        {
          "name": "Get Session Statistics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/statistics/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["statistics", "sessions", "{{session_id}}"]
            },
            "description": "Get detailed statistics for a completed game session"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ]
}
